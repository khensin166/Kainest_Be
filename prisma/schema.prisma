generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Couple {
  id        String   @id @default(uuid())
  user1Id   String
  user2Id   String
  createdAt DateTime @default(now())
  user1     User     @relation("User1Couple", fields: [user1Id], references: [id])
  user2     User     @relation("User2Couple", fields: [user2Id], references: [id])
  notes     Note[]   @relation("CoupleNotes")
  photos    Photo[]
  todos     Todo[]   @relation("CoupleTodos")
}

model Photo {
  id         String   @id @default(uuid())
  imageUrl   String
  caption    String?
  coupleId   String?
  uploadedBy String
  createdAt  DateTime @default(now())
  couple     Couple?  @relation(fields: [coupleId], references: [id])
  uploader   User     @relation(fields: [uploadedBy], references: [id])
}

model UserProfile {
  id             String   @id @default(uuid())
  displayName    String?
  avatarUrl      String?
  invitationCode String?  @unique
  createdAt      DateTime @default(now())
  userId         String   @unique
  user           User     @relation(fields: [userId], references: [id])
}

model User {
  id           String            @id @default(uuid())
  email        String            @unique
  password     String?
  name         String?
  createdAt    DateTime          @default(now())
  updatedAt    DateTime?         @updatedAt
  phone_number String?           @unique
  couples1     Couple[]          @relation("User1Couple")
  couples2     Couple[]          @relation("User2Couple")
  notes        Note[]            @relation("UserNotes")
  logs         NotificationLog[]
  photos       Photo[]
  todos        Todo[]            @relation("UserTodos")
  profile      UserProfile?
  shifts       UserShift[]

  // --- NEW: BUDGETING FIELDS ---
  salary Int @default(0) // Gaji bulanan
  payday Int @default(1) // Tanggal gajian (1-31)

  // Relasi ke fitur Budgeting
  budgetCategories BudgetCategory[] // Kategori custom user
  budgets          Budget[] // Limit budget bulanan
  transactions     Transaction[] // Catatan pengeluaran
  aiSuggestions    AISuggestion[] // Log saran AI
}

model UserShift {
  userId     String
  date       DateTime @db.Date
  shift_type String
  createdAt  DateTime @default(now())
  id         String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  user       User     @relation(fields: [userId], references: [id])

  @@unique([userId, date])
}

model ShiftActivity {
  id            String            @id @default(uuid())
  shift_type    String
  activity_name String
  time_start    String
  reminder_time String
  note          String?
  logs          NotificationLog[]

  @@unique([shift_type, reminder_time])
}

model NotificationLog {
  id         String        @id @default(uuid())
  userId     String
  activityId String
  sent_at    DateTime      @default(now())
  activity   ShiftActivity @relation(fields: [activityId], references: [id])
  user       User          @relation(fields: [userId], references: [id])

  @@unique([userId, activityId, sent_at])
}

model Todo {
  id           String   @id @default(uuid())
  title        String
  coupleId     String
  createdAt    DateTime @default(now())
  createdById  String
  description  String?
  is_completed Boolean  @default(false)
  updatedAt    DateTime @updatedAt
  couple       Couple   @relation("CoupleTodos", fields: [coupleId], references: [id], onDelete: Cascade)
  createdBy    User     @relation("UserTodos", fields: [createdById], references: [id], onDelete: Cascade)
}

model Note {
  id                String         @id @default(uuid())
  title             String
  content           Json
  is_public         Boolean        @default(false)
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  authorId          String
  coupleId          String?
  partnerPermission NotePermission @default(VIEWER)
  author            User           @relation("UserNotes", fields: [authorId], references: [id], onDelete: Cascade)
  couple            Couple?        @relation("CoupleNotes", fields: [coupleId], references: [id])
}

enum NotePermission {
  VIEWER
  EDITOR
}

// ==========================================
// ðŸ’° FITUR BUDGETING & AI (Kenin System)
// ==========================================

enum TransactionType {
  INCOME
  EXPENSE
}

// 1. Kategori (Dinamis: Bisa default sistem, bisa custom user)
model BudgetCategory {
  id        String          @id @default(uuid())
  name      String // Contoh: "Makan", "Transport", "Kost"
  type      TransactionType @default(EXPENSE)
  icon      String? // Emoji atau url icon
  isDefault Boolean         @default(false) // True jika bawaan sistem
  createdAt DateTime        @default(now())

  userId String? // Nullable. Jika null = Kategori Global (semua user punya)
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  budgets      Budget[]
  transactions Transaction[]
}

// 2. Budget Bulanan (Limit per kategori)
model Budget {
  id           String   @id @default(uuid())
  amount_limit Int // Batas budget (misal: 1.500.000)
  period       DateTime @db.Date // Disimpan per bulan (tgl 1 setiap bulan)

  // Learning Fields
  is_ai_adjusted Boolean @default(false) // Apakah limit ini hasil saran AI?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  categoryId String
  category   BudgetCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, categoryId, period]) // 1 Kategori hanya punya 1 budget per bulan
}

// 3. Transaksi Harian
model Transaction {
  id     String   @id @default(uuid())
  amount Int
  note   String?
  date   DateTime // Tanggal transaksi terjadi

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  categoryId String
  category   BudgetCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

// 4. AI Suggestion Logs (Menyimpan saran Groq)
model AISuggestion {
  id              String  @id @default(uuid())
  type            String // 'DAILY_ADVISOR' | 'MONTHLY_EVAL' | 'REBALANCE'
  suggestion_text String  @db.Text
  is_approved     Boolean @default(false) // User setuju dengan saran ini?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}
